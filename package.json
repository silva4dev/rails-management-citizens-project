{
  "name": "rails-challenge-clean-project",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "21.x"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets --loader:.js=jsx --loader:.ts=tsx --tsconfig=tsconfig.json",
    "build:watch": "npm run build -- --watch",
    "build:css": "tailwindcss -i app/assets/stylesheets/application.tailwind.css -o app/assets/builds/tailwind.css",
    "build:css:watch": "npm run build:css -- --watch",
    "fix": "npm run style:fix; npm run eslint:fix; npm run md:fix; npm run json:fix; npm run erb:fix; npm run ruby:fix",
    "lint": "npm run style:lint; npm run eslint:lint; npm run md:lint; npm run json:lint; npm run erb:lint; npm run ruby:lint",
    "ruby:fix": "bundle exec rubocop -A",
    "ruby:lint": "bundle exec rubocop",
    "style:fix": "prettier --write '**/**/*.{scss,css}'; stylelint '**/**/*.{scss,css}' --fix --allow-empty-input",
    "style:lint": "stylelint '**/**/*.{scss,css}' --allow-empty-input",
    "erb:fix": "bundle exec erblint -a --lint-all; bundle exec erb-format app/views/**/*.html.erb --write",
    "erb:lint": "bundle exec erblint --lint-all",
    "md:fix": "prettier --write '**/**/*.md'",
    "md:lint": "prettier --check '**/**/*.md'",
    "json:fix": "prettier --write '*.json'; prettier --write '**/**/*.json'",
    "json:lint": "prettier --check '*.json'; prettier --check '**/**/*.json'",
    "eslint:fix": "prettier --write '**/**/*.{js,ts,jsx,tsx}'; eslint --fix",
    "eslint:lint": "prettier --check '**/**/*.{js,ts,jsx,tsx}'; eslint",
    "prepare": "husky install",
    "convert-to-lf": "find . -type f ! -path './node_modules/*' -exec dos2unix {} \\;"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.1.0",
    "@hotwired/turbo-rails": "^7.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.1",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.29",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "4.4.0",
    "@typescript-eslint/parser": "^7.3.1",
    "esbuild": "^0.15.3",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "19.0.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.21.4",
    "eslint-plugin-standard": "4.0.1",
    "git-commit-msg-linter": "^2.3.11",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^36.0.0",
    "ts-node": "^10.9.2",
    "typescript": "4.0.5"
  }
}
