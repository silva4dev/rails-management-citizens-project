<div class="mx-auto md:w-2/3 w-full">
  <div class="flex justify-between">
    <h1 class="font-bold text-4xl"><%= t('actions.edit', model: @municipe.full_name) %></h1>
    <% if @municipe.photo.present? %>
      <%= image_tag url_for(@municipe.photo), class: "rounded-md", style: "max-width: 150px; max-height: 150px;" %>
    <% end %>
  </div>
  <%= render "form", locals: { municipe: @municipe, url: municipe_path } %>
  <%= link_to t('helpers.subtitles.back'), municipes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
